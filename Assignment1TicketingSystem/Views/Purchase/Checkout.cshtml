@model Assignment1TicketingSystem.Models.Purchase
@{
    ViewData["Title"] = "Checkout";
    var evt = ViewBag.Event as Assignment1TicketingSystem.Models.Event;
    var maxTickets = (int)ViewBag.MaxTickets;
}

<h2>Purchase Tickets for @evt.Title</h2>

<form asp-action="Create" method="post" class="mt-3">
    <input type="hidden" name="eventId" value="@evt.EventId" />

    <div class="mb-3">
        <label class="form-label">Guest Name</label>
        <input type="text" name="guestName" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Guest Email</label>
        <input type="email" name="guestEmail" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Guest Phone (optional)</label>
        <input type="tel" name="guestPhone" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Quantity (max @maxTickets)</label>
        <input type="number" name="quantity" class="form-control" min="1" max="@maxTickets" required />
        @if (ViewData.ModelState["quantity"]?.Errors.Count > 0)
    {
        <span class="text-danger">@ViewData.ModelState["quantity"].Errors[0].ErrorMessage</span>
    }

    </div>

    <button type="submit" class="btn btn-success">Complete Purchase</button>
    <a asp-action="Select" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
