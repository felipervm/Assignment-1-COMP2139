@model List<Assignment1TicketingSystem.Models.Event>
@{
    ViewData["Title"] = "Select Event";
}

<h2>Select an Event to Purchase Tickets</h2>

@if (Model?.Count > 0)
{
    <div class="table-responsive mt-3">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Date</th>
                    <th>Price</th>
                    <th>Available Tickets</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var evt in Model)
                {
                    <tr>
                        <td>@evt.Title</td>
                        <td>@evt.Category?.Name</td>
                        <td>@evt.EventDateTime.ToString("MMM dd, yyyy HH:mm")</td>
                        <td>$@evt.TicketPrice</td>
                        <td>@evt.AvailableTickets</td>
                        <td>
                            <a href="/purchase/checkout/@evt.EventId" class="btn btn-sm btn-primary">Buy Tickets</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>No available events for purchase.</p>
}
