@model Assignment1TicketingSystem.Models.Event
@{
    ViewData["Title"] = "Delete Event";
}

<h2>Delete Event</h2>
<p>Are you sure you want to delete this event?</p>

<div class="card p-3 mb-3">
    <h5>@Model.Title</h5>
    <p><strong>Category:</strong> @Model.Category?.Name</p>
    <p><strong>Date & Time:</strong> @Model.EventDateTime.ToString("MMM dd, yyyy HH:mm")</p>
    <p><strong>Price:</strong> $@Model.TicketPrice</p>
    <p><strong>Available Tickets:</strong> @Model.AvailableTickets</p>
</div>

<form asp-action="Delete" asp-route-id="@Model.EventId" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
