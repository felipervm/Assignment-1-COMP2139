@{
    ViewData["Title"] = "Event Overview";
}

<h2>Event Overview</h2>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">Total Events</h5>
                <p class="card-text display-6">@ViewBag.TotalEvents</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Total Categories</h5>
                <p class="card-text display-6">@ViewBag.TotalCategories</p>
            </div>
        </div>
    </div>
</div>

<h4>Low Ticket Events (&lt; 5 available)</h4>
@if (((List<Assignment1TicketingSystem.Models.Event>)ViewBag.LowStockEvents)?.Count > 0)
{
    <ul class="list-group mb-4">
        @foreach (var evt in ViewBag.LowStockEvents)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                @evt.Title (@evt.AvailableTickets tickets)
                <span class="badge bg-warning text-dark">@evt.Category?.Name</span>
            </li>
        }
    </ul>
}
else
{
    <p>No low ticket events.</p>
}

<h4>Sold Out Events</h4>
@if (((List<Assignment1TicketingSystem.Models.Event>)ViewBag.SoldOutEvents)?.Count > 0)
{
    <ul class="list-group">
        @foreach (var evt in ViewBag.SoldOutEvents)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                @evt.Title
                <span class="badge bg-danger">Sold Out</span>
            </li>
        }
    </ul>
}
else
{
    <p>No sold out events.</p>
}
