@model Assignment1TicketingSystem.Models.Event
@{
    ViewData["Title"] = "Event Details";
}

<h2>@Model.Title</h2>

<div class="card p-3">
    <p><strong>Category:</strong> @Model.Category?.Name</p>
    <p><strong>Date & Time:</strong> @Model.EventDateTime.ToString("MMM dd, yyyy HH:mm")</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Ticket Price:</strong> $@Model.TicketPrice</p>
    <p><strong>Available Tickets:</strong> @Model.AvailableTickets</p>
    <p><strong>Created On:</strong> @Model.CreatedDate.ToString("MMM dd, yyyy")</p>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Back to Events</a>
