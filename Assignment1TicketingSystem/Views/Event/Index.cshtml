@model List<Assignment1TicketingSystem.Models.Event>
@using Assignment1TicketingSystem.Models
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Events";

    // Prepare categories for the dropdown
    var categories = ViewBag.Categories as List<Category>;
    var selectedCategory = ViewBag.SearchCategory ?? 0;
    var searchTitle = ViewBag.SearchTitle ?? "";

    // Create SelectList including "All Categories"
    var categorySelectList = new List<SelectListItem>
    {
        new SelectListItem { Text = "All Categories", Value = "0", Selected = selectedCategory == 0 }
    };
    if (categories != null)
    {
        categorySelectList.AddRange(categories.Select(c => new SelectListItem
        {
            Text = c.Name,
            Value = c.CategoryId.ToString(),
            Selected = selectedCategory == c.CategoryId
        }));
    }
}

<h2>All Events</h2>

<!-- âœ… Search and Filter Form -->
<form method="get" asp-controller="Event" asp-action="Index" class="row g-3 mb-4">
    <div class="col-md-4">
        <input type="text" name="search" value="@searchTitle"
               class="form-control" placeholder="Search by title..." />
    </div>
    <div class="col-md-4">
        <select name="categoryId" class="form-select" asp-items="categorySelectList"></select>
    </div>
    <div class="col-md-4">
        <button type="submit" class="btn btn-primary">Filter</button>
        <a asp-controller="Event" asp-action="Index" class="btn btn-secondary">Reset</a>
    </div>
</form>

<a href="/events/create" class="btn btn-success mb-3">Add New Event</a>

@if (Model?.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Date</th>
                    <th>Price</th>
                    <th>Available</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var evt in Model)
                {
                    <tr>
                        <td>@evt.Title</td>
                        <td>@evt.Category?.Name</td>
                        <td>@evt.EventDateTime.ToString("MMM dd, yyyy HH:mm")</td>
                        <td>$@evt.TicketPrice</td>
                        <td>@evt.AvailableTickets</td>
                        <td>
                            <a href="/events/details/@evt.EventId" class="btn btn-sm btn-info">View</a>
                            <a href="/events/edit/@evt.EventId" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-controller="Event" asp-action="Delete" asp-route-id="@evt.EventId" class="btn btn-sm btn-danger">Delete</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>No events found.</p>
}
